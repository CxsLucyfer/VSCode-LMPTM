{
  "ignorePatterns": ["dist", "out"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "root": true,
  "rules": {
    "@typescript-eslint/semi": ["error", "never"],
    "arrow-parens": ["warn", "as-needed"],
    "curly": ["error", "multi-or-nest"],
    "eqeqeq": "warn",
    "no-throw-literal": "warn",
    "semi": "off"
  }
}
